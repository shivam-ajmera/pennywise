{
    "manifest_version": 3,
  
    "name": "Pennywise",
    "description": "Class Cost Calculator",
    "version": "1.0.0",
    "author": "Shivam Ajmera",

    "action": {
      "default_popup": "popup.html"
    },

    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    
    "background": {
      "service_worker": "./js/background.js"
    },

    "options_page": "options.html",

    "permissions": [
      "storage",
      "tabs"
    ]
}